<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_addproducts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.google.android.gms.samples.vision.barcodereader.Addproducts">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/scan_barcode2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/barcode_field"
        android:hint="Barcode"
        android:textAlignment="center" />

    <Button
        android:text="Scan Barcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scan_barcode2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:id="@+id/add_product"
        android:layout_below="@+id/product_name_field"
        android:layout_toLeftOf="@+id/create"
        android:layout_toStartOf="@+id/create" />

    <Button
        android:text="CHANGE OWNER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/changestate"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/scan_barcode2"
        android:layout_alignStart="@+id/scan_barcode2"
        android:layout_marginBottom="51dp" />

    <Button
        android:text="Chane State"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chown"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/create"
        android:layout_alignBottom="@+id/create"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Assign Barcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/create"
        android:layout_alignBaseline="@+id/add_product"
        android:layout_alignBottom="@+id/add_product"
        android:layout_toLeftOf="@+id/chown"
        android:layout_toStartOf="@+id/chown" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="32dp"
        android:id="@+id/product_name_field"
        android:hint="Product Id"
        android:textAlignment="center"
        android:layout_below="@+id/barcode_field"
        android:layout_alignLeft="@+id/barcode_field"
        android:layout_alignStart="@+id/barcode_field"
        android:editable="false"
        android:allowUndo="false"
        android:enabled="false" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_product"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:id="@+id/spinner" />

</RelativeLayout>
